<p id="notice"><%= notice %></p>

<h1>Historico Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><% Cliente.all.each do |cliente|%>
          <% if cliente.id === pedido.clienteId %>
             <%= cliente.nome %>
          <% end %>
        <% end %></td>
        <td><%= pedido.nome %></td>
        <td><%= pedido.descricao %></td>
        <td><%= pedido.status %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

