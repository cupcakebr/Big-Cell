<p id="notice"><%= notice %></p>

<h1>Vendas</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Produto</th>
      <th>Valor servico</th>
      <th>Valor total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><% Cliente.all.each do |cliente|%>
          <% if cliente.id === venda.clienteId %>
             <%= cliente.nome %>
           <% end %>
         <% end %> </td>

        <td> <% Produto.all.each do |produto| %>
             <% if produto.id === venda.produtoId %>
              <%= produto.nome %>
            <% end %>
          <% end %> </td>

        <td><%= venda.valorServico %></td>

        <td><% Produto.all.each do |produto| %>
             <% if produto.id === venda.produtoId %>
              <%= produto.preco + venda.valorServico%>
            <% end %>
          <% end %> </td>

        <td><%= link_to 'Show', venda %></td>
        <td><%= link_to 'Edit', edit_venda_path(venda) %></td>
        <td><%= link_to 'Destroy', venda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

